<Window x:Class="SimpleGridLayout.SimpleBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleGridLayout"
        mc:Ignorable="d"
        Title="SimpleBinding" Height="450" Width="800">

    <StackPanel Name="parentSp">

        <StackPanel Orientation="Horizontal">
            <TextBox Width="100" Height="50"  Text="{Binding Path=FirstName}"/>
            <TextBox Width="100" Height="50"  Text="{Binding Path=Age}"/>

        </StackPanel>
       

    </StackPanel>
</Window>
